<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "html://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
   <head>
     <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
     <title>Blog | <%= @page_title || 'Admin Area' %></title>
     <meta name="author" content="Nitin Agarwal">
     <%= stylesheet_link_tag('public','admin', :media => 'all') %> 
   </head>
   <body>
     <div id="header">
       <h1>Blog Admin</h1>
     </div>
     <div id="main">
        <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
        <% end %>
        <div id="content">
            <%= yield %>
        </div>
     </div>
     <div id="footer">
        <p id="copyright">&copy; medoct.com / Nitin Agarwal</p>
     </div>
   </body>
</html>
