  <%= form_for(:comment, :html => { :multipart => true }, :url => {:action => 'create', :post_id => @post_id}) do |f| %>
  
    <%= render(:partial => "form", :locals => {:f => f}) %>
   
    <div class="form-buttons">
       <%= submit_tag("Post Comment") %>
    </div>

  <% end %>
</div>
